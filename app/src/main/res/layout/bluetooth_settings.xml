<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <!-- Battery Level -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/batteryProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />

        <TextView
            android:id="@+id/lblBAT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/batteryProgressBar"
            android:text="BAT: - - -" />
    </LinearLayout>

    <!-- Connection Status -->
    <TextView
        android:id="@+id/lblStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/batteryProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="- - -" />

    <!-- Connect Button -->
    <Button
        android:id="@+id/buttonConnect"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Connect" />

    <!-- Disconnect Button -->
    <Button
            android:id="@+id/buttonDisconnect"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonConnect"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:text="Disconnect" />

    <!-- Accelerometer Values -->

    <TextView
            android:id="@+id/lblACC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonDisconnect"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:text="ACC: - - " />
    <!-- android:layout_toLeftOf="@+id/buttonDisconnect" -->

    <TextView
        android:id="@+id/ACC_fall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblACC"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Fall:" />

</RelativeLayout>
