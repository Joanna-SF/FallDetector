<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center">

    <Button
        android:id="@+id/biolib_developer"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/biolib_user"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="131dp"
        android:text="@string/biolib_developer" />

    <Button
        android:id="@+id/biolib_user"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSendMessage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="133dp"
        android:text="@string/biolib_user" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emergency_contact"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:minHeight="48dp"
        android:hint="@string/phone_hint"
        android:inputType="phone"
        android:autofillHints="phoneNumber"/>

    <Button
        android:id="@+id/buttonSendMessage"
        android:layout_width="148dp"
        android:layout_height="60dp"
        android:layout_below="@+id/editTextPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/button_text" />


</RelativeLayout>